<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/commodity_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/weiyi1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/commodity_tianmao"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/tianmao_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/commodity_image"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/commodity_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="商品描述"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/commodity_text_from"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toEndOf="@+id/commodity_tianmao"
            app:layout_constraintTop_toBottomOf="@+id/commodity_image"
            app:layout_constraintVertical_bias="0.4" />

        <ImageView
            android:id="@+id/commodity_shuang11"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shuang11_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/commodity_tianmao"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/commodity_text_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每300减50"
            android:textColor="@color/orange"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/commodity_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.035"
            app:layout_constraintStart_toEndOf="@id/commodity_shuang11"
            app:layout_constraintTop_toBottomOf="@+id/commodity_tianmao" />

        <TextView
            android:id="@+id/commodity_decrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="先用后付"
            android:textColor="@color/green"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/commodity_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toEndOf="@+id/commodity_text_from"
            app:layout_constraintTop_toBottomOf="@+id/commodity_tianmao"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="¥"
            android:textColor="@color/orange"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/commodity_shuang11"
            app:layout_constraintVertical_bias="0.7" />

        <TextView
            android:id="@+id/commodity_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="69.9"
            android:textColor="@color/orange"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/commodity_shuang11"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/commodity_sellnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已售500+"
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toEndOf="@+id/commodity_price"
            app:layout_constraintTop_toBottomOf="@+id/commodity_shuang11"
            app:layout_constraintVertical_bias="0.7" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


